// Algorithm.astro - Overview of the DISC dynamic decomposition workflow
const workflowSteps = [
  {
    title: 'Identify pivotal prefixes',
    description:
      'DISC samples continuations from the current prefix and scores them with an outcome reward model to locate promising solution regions.'
  },
  {
    title: 'Adapt step granularity',
    description:
      'Difficult prefixes trigger finer-grained decomposition, while easier prefixes advance in larger chunks to conserve budget.'
  },
  {
    title: 'Allocate compute where it matters',
    description:
      'Sampling focuses on high-importance tokens, driving additional rollouts only when they improve the z-score over existing prefixes.'
  },
  {
    title: 'Plug into search',
    description:
      'The same decomposition policy controls node expansion for greedy, beam, or MCTS search, making DISC a drop-in upgrade.'
  }
];

const highlights = [
  {
    label: 'Adaptive recursion',
    text: 'Advance or contract step sizes on the fly until the reward landscape stops improving.'
  },
  {
    label: 'Minimal assumptions',
    text: 'Requires only an outcome reward model — unit tests, verifiers, or self-critique signals all qualify.'
  },
  {
    label: 'Provable convergence',
    text: 'Under mild support assumptions on the base policy, DISC monotonically improves the best solution prefix.'
  } 
];

const stepDefinitions = [
  {
    id: 'solutionLabel',
    html: `<span class="step-text">Solution:</span>`,
    colorClass: 'step-color-label'
  },
  {
    id: 'sampling',
    html: `<div class="sampling-icon" role="img" aria-label="Sampling candidate completions">
  <span class="spark"></span>
  <span class="spark"></span>
  <span class="spark"></span>
</div>`,
    colorClass: 'step-color-sampling sampling-step'
  },
  {
    id: 'initialCandidate',
    html:
      `<span class="step-text">Let the length of the rectangle be ( l ), width be ( w ). We want to maximize the area ( A = lw ) subject to the constraint ( 2l + 2w = 24 ).</span>`,
    colorClass: 'step-color-setup bracketed-step'
  },
  {
    id: 'coreSetup',
    html: `<span class="step-text">Let the length of the rectangle be ( l )</span>`,
    colorClass: 'step-color-setup bracketed-step'
  },
  {
    id: 'constraint',
    html:
      `<span class="step-text">and the width of the rectangle be ( w ). Since the perimeter of the rectangle is 24 inches, we have that ( 2l + 2w = 24 ), so ( l + w = 12 ). We wish to maximize the area of the rectangle,</span>`,
    colorClass: 'step-color-constraint bracketed-step'
  },
  {
    id: 'whichClause',
    html:
      `<span class="step-text">which because of the constraint can be expressed as ( A = lw = l(12 - l) = 12l - l^2 ). To find the maximum area, we take the derivative of ( A ) with respect to ( l ) and set it to zero:</span>`,
    colorClass: 'step-color-derivative bracketed-step'
  },
  {
    id: 'whichOnly',
    html: `<span class="step-text">which</span>`,
    colorClass: 'step-color-bridge bracketed-step'
  },
  {
    id: 'finalDerivation',
    html: `<div class="final-derivation-text">
is ( A = lw ). Let ( l = 12 - w ) and plug into the area:<br /><br />
A = ( 12 - w )w  =>  A = 12w - w^2<br /><br />
Differentiate: A'( w ) = 12 - 2w<br /><br />
Set derivative = 0 => w = 6<br /><br />
Then l = 6. Therefore, the maximum area is<br /><br />
A = lw = 6 &times; 6 = <strong>36</strong>
</div>`,
    colorClass: 'step-color-objective final-derivation-step'
  }
];

const frames = [
  {
    status: { label: 'Sampling initial prefix…', tone: 'sampling' },
    stepStates: { solutionLabel: 'visible', sampling: 'sampling' }
  },
  {
    status: { label: 'Proposing candidate prefix', tone: 'commit' },
    stepStates: { solutionLabel: 'visible', initialCandidate: 'new' }
  },
  {
    status: { label: 'Evaluating proposal…', tone: 'sampling' },
    stepStates: { solutionLabel: 'visible', initialCandidate: 'visible', sampling: 'sampling' }
  },
  {
    status: { label: 'Contracting to core prefix', tone: 'contract' },
    stepStates: {
      solutionLabel: 'visible',
      initialCandidate: 'contracting',
      coreSetup: 'new'
    }
  },
  {
    status: { label: 'Sampling contracted prefix…', tone: 'sampling' },
    stepStates: { solutionLabel: 'visible', coreSetup: 'visible', sampling: 'sampling' }
  },
  {
    status: { label: 'Candidate accepted', tone: 'commit' },
    stepStates: { solutionLabel: 'visible', coreSetup: 'final' }
  },
  {
    status: { label: 'Proposing extended prefix', tone: 'commit' },
    stepStates: { solutionLabel: 'visible', coreSetup: 'final', constraint: 'new' }
  },
  {
    status: { label: 'Evaluating extension…', tone: 'sampling' },
    stepStates: {
      solutionLabel: 'visible',
      coreSetup: 'final',
      constraint: 'visible',
      sampling: 'sampling'
    }
  },
  {
    status: { label: 'Prefix accepted, sampling ahead', tone: 'commit' },
    stepStates: { solutionLabel: 'visible', coreSetup: 'final', constraint: 'final', sampling: 'sampling' }
  },
  {
    status: { label: 'Drafting derivative clause…', tone: 'commit' },
    stepStates: { solutionLabel: 'visible', coreSetup: 'final', constraint: 'final', whichClause: 'new' }
  },
  {
    status: { label: 'Scoring derivative clause…', tone: 'sampling' },
    stepStates: {
      solutionLabel: 'visible',
      coreSetup: 'final',
      constraint: 'final',
      whichClause: 'visible',
      sampling: 'sampling'
    }
  },
  {
    status: { label: 'Contracting derivative clause', tone: 'contract' },
    stepStates: {
      solutionLabel: 'visible',
      coreSetup: 'final',
      constraint: 'final',
      whichClause: 'contracting',
      whichOnly: 'new'
    }
  },
  {
    status: { label: 'Sampling hinge prefix…', tone: 'sampling' },
    stepStates: {
      solutionLabel: 'visible',
      coreSetup: 'final',
      constraint: 'final',
      whichOnly: 'visible',
      sampling: 'sampling'
    }
  },
  {
    status: { label: 'Correct solution found', tone: 'success' },
    stepStates: {
      solutionLabel: 'visible',
      coreSetup: 'final',
      constraint: 'final',
      whichOnly: 'final',
      finalDerivation: 'final'
    }
  }
];
