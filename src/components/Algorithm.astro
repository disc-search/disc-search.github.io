    </div>

    <div class="workflow-grid">
      {workflowSteps.map((step) => (
        <article class="workflow-card">
          <h3>{step.title}</h3>
          <p>{step.description}</p>
        </article>
      ))}
    </div>

    <div class="method-diagrams">
